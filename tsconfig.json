{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "fixtures",
    "tests"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2016", "esnext.asynciterable"]
  }
}
